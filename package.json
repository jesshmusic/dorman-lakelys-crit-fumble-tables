{
  "name": "dorman-lakelys-crit-fumble-tables",
  "version": "1.1.0",
  "description": "Generic tier-based critical hit and fumble tables for D&D 5e with Midi-QOL integration",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "clean": "rm -rf dist",
    "build:tables": "node scripts/build-tables.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"**/*.json\" \"**/*.md\" \"!node_modules/**\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"**/*.json\" \"**/*.md\" \"!node_modules/**\"",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "foundry",
    "foundryvtt",
    "dnd5e",
    "critical-hits",
    "fumbles",
    "midi-qol",
    "roll-tables"
  ],
  "author": "Dorman Lakely",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jesshmusic/dorman-lakelys-crit-fumble-tables.git"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "private": true
}
